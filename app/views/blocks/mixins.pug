mixin serviceItem(data) 
	.service-item 
		.service-content 
			i.service-icon(class= data.iconClass)
			span.service-title= data.title
			p.service-desc= data.desc
mixin numberItem(data) 
	.number-item
		i.number-icon(class=data.iconClass)
		.number-para 
			h4.number-count= data.num
			span.number-text= data.text
