mixin menuLink(data)
	li.header-menu-item 
		a.header-menu-link(href= data.href="#")= data.title 
mixin blockBox(data)
	.blockBox-content 
		.blockBox-content-title= data.title
		.blockBox-content-paragraph= data.para
mixin itemAbout(data)
	li.about-item 
		p.about-item-content 
			span.about-item-name= data.name
			span.about-item-num= data.percent
		.about-item-line
			.div(class=data.percentClass)
